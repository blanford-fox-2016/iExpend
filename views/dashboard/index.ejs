<!DOCTYPE html>
<html>
<head>
    <% include ../head.ejs %>
</head>
<body class="page-header-fixed page-sidebar-closed-hide-logo page-content-white">


<!-- BEGIN HEADER -->
<% include top_nav.ejs %>
<!-- END HEADER -->


<div class="clearfix"> </div>

<div class="page-container">
    <!-- BEGIN SIDEBAR -->
    <% include side_nav.ejs %>
    <!-- END SIDEBAR -->

    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <!-- BEGIN CONTENT BODY -->
        <div class="page-content">
            <div class="page-bar">
                <ul class="page-breadcrumb">
                    <% include home_link.ejs %>
                    <li>
                        <span>Dashboard</span>
                    </li>
                </ul>
            </div>
            <!-- END PAGE BAR -->
            <!-- BEGIN PAGE TITLE-->
            <h3 class="page-title">
                Dashboard
            </h3>
            <!-- END PAGE TITLE-->
            <!-- END PAGE HEADER-->




            <!-- BEGIN DASHBOARD STATS 1-->
            <div class="row">

                <div class="col-sm-6">
                    <div class="portlet light bordered">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="icon-share font-dark"></i>
                                <span class="caption-subject font-dark bold uppercase">Income</span>
                            </div>
                        </div>

                        <% var spend = 0%>
                        <% var income = 0%>
                        <% for (var i = 0; i < data[0].transaction.length; i++) {%>
                        <% if(data[0].transaction[i].category == "out") { %>
                        <% spend += data[0].transaction[i].cost%>
                        <% } else {%>
                        <% income += data[0].transaction[i].cost%>
                        <% } %>
                        <% } %>

                        <div class="portlet-body">

                            <h3><%= income%></h3>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="portlet light bordered">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="icon-share font-dark"></i>
                                <span class="caption-subject font-dark bold uppercase">Spend</span>
                            </div>
                        </div>
                        <div class="portlet-body">

                            <h3><%= spend%></h3>
                        </div>
                    </div>
                </div>
            </div>

            <!-- END DASHBOARD STATS 1-->


        </div>
        <!-- END CONTENT BODY -->
    </div>
    <!-- END CONTENT -->

</div>
<!-- END CONTAINER -->
<!-- BEGIN FOOTER -->
<% include footer.ejs %>
<!-- END FOOTER -->


<% include ../script.ejs %>

</body>
</html>