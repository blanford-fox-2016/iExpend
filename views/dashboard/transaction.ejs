<!DOCTYPE html>
<html>
<head>
    <% include ../head.ejs %>
</head>
<body class="page-header-fixed page-sidebar-closed-hide-logo page-content-white">


<!-- BEGIN HEADER -->
<% include top_nav.ejs %>
<!-- END HEADER -->


<div class="clearfix"> </div>

<div class="page-container">
    <!-- BEGIN SIDEBAR -->
    <% include side_nav.ejs %>
    <!-- END SIDEBAR -->

    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <!-- BEGIN CONTENT BODY -->
        <div class="page-content">
            <div class="page-bar">
                <ul class="page-breadcrumb">
                    <% include home_link.ejs %>
                    <li>
                        <span>Dashboard</span>
                    </li>
                </ul>
            </div>
            <!-- END PAGE BAR -->
            <!-- BEGIN PAGE TITLE-->
            <h3 class="page-title text-center">
                Transaction
            </h3>

            <div class="row">

                <div class="col-sm-12">
                    <form class="form-horizontal" role="form" method="post" action="/dashboard/transaction">
                        <div class="form-body">

                            <div class="form-group">
                                <label class="col-sm-4 control-label">Date</label>
                                <div class="col-sm-4">
                                    <input type="date" name="date" class="form-control input-inline input-large">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-4 control-label">Cost</label>
                                <div class="col-sm-4">
                                    <input type="number" name="cost" class="form-control input-inline input-large" placeholder="Enter Price">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-4 control-label">Type</label>
                                <div class="col-sm-4">
                                    <select name="type" class="form-control input-inline input-large">
                                        <option value="in">In</option>
                                        <option value="out">Out</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-4 control-label">Description</label>
                                <div class="col-sm-4">
                                    <input type="text" name="description" class="form-control input-inline input-large" placeholder="Enter Descriptioin">
                                </div>
                            </div>

                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-sm-offset-4 col-sm-4">
                                    <button type="submit" class="btn green">Submit</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

            </div>

            <!-- END DASHBOARD STATS 1-->


        </div>
        <!-- END CONTENT BODY -->
    </div>
    <!-- END CONTENT -->

</div>
<!-- END CONTAINER -->
<!-- BEGIN FOOTER -->
<% include footer.ejs %>
<!-- END FOOTER -->


<% include ../script.ejs %>

</body>
</html>